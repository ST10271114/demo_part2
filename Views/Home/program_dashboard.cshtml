@{
    ViewData["Title"] = "Program Dashboard";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    .dashboard-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
        text-align: center;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    a {
        display: inline-block;
        margin: 10px 0;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        a:hover {
            background-color: #0056b3;
        }

    .divider {
        margin: 20px 0;
        height: 1px;
        background-color: #ccc;
        width: 100%;
    }
</style>

<div class="dashboard-container">
    <h1>Welcome, Program Coordinator!</h1>

    <a href="@Url.Action("view_claims", "Home")">View Claims</a>
    <div class="divider"></div>
    <a href="@Url.Action("ApproveClaims", "Home")">Approve Claims</a>
</div>
